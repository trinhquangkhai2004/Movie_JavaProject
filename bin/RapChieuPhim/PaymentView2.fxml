<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RapChieuPhim.PaymentController2">

   <top>
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 20 30;">
         <Button onAction="#goBack" style="-fx-background-color: transparent; -fx-font-size: 24px; -fx-cursor: hand;" text="❮" textFill="WHITE" />
         <Label text="Thanh Toán An Toàn" textFill="WHITE"><font><Font name="System Bold" size="22.0" /></font></Label>
      </HBox>
   </top>

   <center>
      <HBox alignment="CENTER" spacing="40.0" style="-fx-padding: 20;">
         
         <VBox spacing="20.0" maxWidth="400.0" HBox.hgrow="ALWAYS">
            <Label text="Chọn phương thức thanh toán" textFill="#888888" />
            
            <VBox spacing="10.0">
               <fx:define><ToggleGroup fx:id="paymentGroup" /></fx:define>
               
               <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #1A1A1A; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #333; -fx-border-radius: 10;">
                  <RadioButton text="Ví MoMo" textFill="WHITE" toggleGroup="$paymentGroup" selected="true" style="-fx-font-size: 16px;"/>
                  <Label text="MOMO" textFill="#A50064" style="-fx-font-weight: bold; -fx-border-color: #A50064; -fx-border-radius: 4; -fx-padding: 2 5;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #1A1A1A; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #333; -fx-border-radius: 10;">
                  <RadioButton text="ZaloPay" textFill="WHITE" toggleGroup="$paymentGroup" style="-fx-font-size: 16px;"/>
                  <Label text="ZALO" textFill="#0068FF" style="-fx-font-weight: bold; -fx-border-color: #0068FF; -fx-border-radius: 4; -fx-padding: 2 5;"/>
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #1A1A1A; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #333; -fx-border-radius: 10;">
                  <RadioButton text="Thẻ ATM / Visa / Master" textFill="WHITE" toggleGroup="$paymentGroup" style="-fx-font-size: 16px;"/>
                  <Label text="BANK" textFill="#FFD700" style="-fx-font-weight: bold; -fx-border-color: #FFD700; -fx-border-radius: 4; -fx-padding: 2 5;"/>
               </HBox>
            </VBox>
         </VBox>

         <VBox spacing="20.0" maxWidth="350.0" style="-fx-background-color: #1A1A1A; -fx-padding: 30; -fx-background-radius: 20;" HBox.hgrow="ALWAYS">
            <Label text="Quét mã để thanh toán" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            
            <StackPane alignment="CENTER" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 10;">
               <Rectangle width="200" height="200" fill="#121212" /> <Label text="QR CODE" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 24px;"/>
            </StackPane>
            
            <Separator opacity="0.1" />
            
            <VBox spacing="10.0">
               <Label fx:id="lblMovie" text="Phim: Dune Part Two" textFill="WHITE" wrapText="true"/>
               <Label fx:id="lblSeats" text="Ghế: H8, H9" textFill="WHITE"/>
               <HBox>
                  <Label text="Tổng tiền:" textFill="#888888"/>
                  <Region HBox.hgrow="ALWAYS"/>
                  <Label fx:id="lblTotal" text="180.000 đ" textFill="#FF9800" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>
               </HBox>
            </VBox>

            <Button onAction="#handlePay" text="Xác nhận đã chuyển tiền" maxWidth="Infinity" prefHeight="45" style="-fx-background-color: #FF9800; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 25;"/>
         </VBox>

      </HBox>
   </center>
</BorderPane>